generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model asignaciones_trabajo {
  id             Int      @id @default(autoincrement())
  usuario_id     Int
  fecha          DateTime @db.Date
  es_obligatorio Boolean? @default(false)
  usuarios       usuarios @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([usuario_id, fecha], name: "usuario_id_fecha")
}


model usuarios {
  id                   Int                    @id @default(autoincrement())
  nombre               String
  apellido             String
  rol                  String
  playa                String?
  asignaciones_trabajo asignaciones_trabajo[]
}

model configuracion_cuadrante {
  id                Int      @id @default(autoincrement())
  mes               String   @unique // formato "YYYY-MM"
  horasDiarias      Float
  horasLegalesMes   Float
  socorristasPorDia Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
